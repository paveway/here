<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>info.paveway.here.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>RegistUser</servlet-name>
    <servlet-class>info.paveway.here.servlet.RegistUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>info.paveway.here.servlet.DeleteUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>info.paveway.here.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>info.paveway.here.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoomList</servlet-name>
    <servlet-class>info.paveway.here.servlet.RoomListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateRoom</servlet-name>
    <servlet-class>info.paveway.here.servlet.CreateRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteRoom</servlet-name>
    <servlet-class>info.paveway.here.servlet.DeleteRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EnterRoom</servlet-name>
    <servlet-class>info.paveway.here.servlet.EnterRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ExitRoom</servlet-name>
    <servlet-class>info.paveway.here.servlet.ExitRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SendLocation</servlet-name>
    <servlet-class>info.paveway.here.servlet.SendLocationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegistUser</servlet-name>
    <url-pattern>/registUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RoomList</servlet-name>
    <url-pattern>/roomList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateRoom</servlet-name>
    <url-pattern>/createRoom</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteRoom</servlet-name>
    <url-pattern>/deleteRoom</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EnterRoom</servlet-name>
    <url-pattern>/enterRoom</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExitRoom</servlet-name>
    <url-pattern>/exitRoom</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendLocation</servlet-name>
    <url-pattern>/sendLocation</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.html</location>
  </error-page>
</web-app>
