<?xml version="1.0" encoding="utf-8"?>
<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>info.paveway.here.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>info.paveway.here.UserFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>info.paveway.here.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>info.paveway.here.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginHandlerServlet</servlet-name>
    <servlet-class>info.paveway.here.LoginHandlerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SetLocationServlet</servlet-name>
    <servlet-class>info.paveway.here.SetLocationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteLocationServlet</servlet-name>
    <servlet-class>info.paveway.here.DeleteLocationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginHandlerServlet</servlet-name>
    <url-pattern>/loginhandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SetLocationServlet</servlet-name>
    <url-pattern>/setlocation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteLocationServlet</servlet-name>
    <url-pattern>/deletelocation</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.html</location>
  </error-page>
</web-app>
